{
  "openapi": "3.0.2",
  "info": {
    "title": "Airport Project",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost"
    }
  ],
  "paths": {
    "/api/measures": {
      "description": "Retourne la liste des mesures d'un certain type entre deux bornes temporelles",
      "get": {
        "parameters": [
          {
            "schema": {
              "type": "number"
            },
            "in": "query",
            "name": "timeMin",
            "required": true
          },
          {
            "schema": {
              "type": "number"
            },
            "in": "query",
            "name": "timeMax",
            "required": true
          },
          {
            "schema": {
              "type": "string"
            },
            "in": "query",
            "name": "type",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": {
                  "captor": "temperature",
                  "measures": [
                    {
                      "airport": "NTE",
                      "value": 12.3
                    },
                    {
                      "airport": "LYS",
                      "value": 16.7
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/api/average": {
      "description": "Retourne la valeur moyenne des résultats de tous les capteurs par type. Si le jour n'est pas passé, on prend la date du jour.",
      "get": {
        "parameters": [
          {
            "schema": {
              "type": "integer"
            },
            "name": "date",
            "required": false,
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "example": [
                  {
                    "type": "temperature",
                    "value": 18.7
                  },
                  {
                    "type": "wind",
                    "value": 34.4
                  },
                  {
                    "type": "pressure",
                    "value": 1077
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}